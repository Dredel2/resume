<div>
    {{#with main}}
    <main>
        <section>
            {{> title data='My educations' big=true}}
            <ul>
                {{#each education}}
                <li>
                    {{name}}
                    {{#unless isEnd}} <i>(ще в процесі)</i> {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <br>
        <section>
            {{> title data='My certificates' big=false}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}
                    {{#if id includeZero=true}} ({{id}}) {{/if}}
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>